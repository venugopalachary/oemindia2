<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_margin="5dp"
    android:layout_below="@+id/headerlayout"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <ImageView

        android:layout_width="100dp"
        android:id="@+id/vendors_im"
        android:src="@drawable/ic_baseline_search_24"
        android:layout_height="80dp"/>


    <TextView
        android:id="@+id/productname_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/vendors_im"
        android:fontFamily="@font/robotoregular"
        android:paddingLeft="15dp"
        android:text="Seenivasulu"
        android:textColor="@color/colorPrimary"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/price_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/robotoregular"
        android:paddingLeft="15dp"
        android:text="Rs.300"
        android:textColor="@color/colorPrimary"

        android:textSize="18sp" />

    <TextView
        android:id="@+id/companyname_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/productname_tv"
        android:layout_toRightOf="@+id/vendors_im"
        android:fontFamily="@font/robotoregular"
        android:paddingLeft="15dp"
        android:text="Speaks :- English,Hindi,Telugu"
        android:textColor="@color/colorPrimary"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/vendorlocation_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/companyname_tv"
        android:layout_marginTop="1dp"
        android:layout_toRightOf="@+id/vendors_im"
        android:fontFamily="@font/robotoregular"
        android:paddingLeft="15dp"
        android:text="Hyderabad"
        android:textColor="@color/colorPrimary"
        android:textSize="14sp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:visibility="gone"
        android:layout_below="@+id/vendors_im"/>
    <View
        android:layout_width="match_parent"
        android:background="#ccc"
        android:id="@+id/view_im"
        android:layout_below="@+id/vendors_im"
        android:layout_height="0.5dp"/>
    <RelativeLayout
        android:layout_below="@+id/view_im"
        android:background="#fff"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableLayout
            android:id="@+id/table"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:layout_marginLeft="0dp"
                    android:textSize="18dp"
                    android:id="@+id/phnenumber"
                    android:text="Call Now"
                    android:layout_weight="0.5"
                    android:textAlignment="center"
                    android:textColor="#35F8DC"
                    android:layout_below="@+id/view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal" />
                <TextView

                    android:text="Get Base Price"
                    android:textColor="#35F8DC"
                    android:textSize="18dp"
                    android:id="@+id/message"
                    android:textAlignment="center"
                    android:layout_weight="0.5"
                    android:layout_below="@+id/view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal" />
                <TextView
                    android:layout_weight="0"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/chatwithdriver"
                    android:layout_below="@+id/view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </TableRow>
        </TableLayout>

    </RelativeLayout>
</RelativeLayout>